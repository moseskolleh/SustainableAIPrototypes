{
  "manifest_version": 3,
  "name": "EcoPrompt Coach",
  "version": "1.0.0",
  "description": "Intelligent prompt optimization with real-time environmental impact tracking",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://www.bing.com/*",
    "https://www.perplexity.ai/*",
    "https://you.com/*",
    "https://copilot.microsoft.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://www.bing.com/*",
        "https://www.perplexity.ai/*",
        "https://you.com/*",
        "https://copilot.microsoft.com/*"
      ],
      "js": ["core-engine.js", "content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
